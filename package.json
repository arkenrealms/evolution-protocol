{
  "name": "@arken/evolution-protocol",
  "version": "2.0.14",
  "description": "Protocol for Arken: Evolution Isles",
  "scripts": {
    "build": "npm-run-all dist",
    "clean": "del-cli ./build && make-dir ./build",
    "dist": "npm-run-all clean tsc:*",
    "publish": "npm publish --access=public",
    "tsc:1": "rm -rf ./build && mkdir ./build && cp package.json ./build && NODE_ENV=production NODE_OPTIONS=--max-old-space-size=8192 tsc --project tsconfig.build.json"
  },
  "main": "build/index.js",
  "types": "build/types.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.js",
      "default": "./build/index.js"
    },
    "./shard/shard.router": {
      "types": "./build/shard/shard.router.d.ts",
      "import": "./build/shard/shard.router.js",
      "require": "./build/shard/shard.router.js",
      "default": "./build/shard/shard.router.js"
    },
    "./realm/realm.router": {
      "types": "./build/realm/realm.router.d.ts",
      "import": "./build/realm/realm.router.js",
      "require": "./build/realm/realm.router.js",
      "default": "./build/realm/realm.router.js"
    },
    "./bridge/bridge.router": {
      "types": "./build/bridge/bridge.router.d.ts",
      "import": "./build/bridge/bridge.router.js",
      "require": "./build/bridge/bridge.router.js",
      "default": "./build/bridge/bridge.router.js"
    },
    "./presets": {
      "types": "./build/presets.d.ts",
      "default": "./build/presets.js"
    },
    "./config": {
      "types": "./build/config.d.ts",
      "default": "./build/config.js"
    }
  },
  "peerDependencies": {},
  "dependencies": {
    "@trpc/server": "11.0.0-rc.660",
    "@trpc/client": "11.0.0-rc.660",
    "lodash": "^4",
    "dotenv": "^16",
    "moment": "^2",
    "mongoose": "^8",
    "pluralize": "^8",
    "zod": "^3"
  },
  "devDependencies": {
    "@types/common-tags": "^1",
    "@types/jest": "^29",
    "@types/lodash": "^4",
    "@types/mongoose": "^5",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "del-cli": "^5",
    "eslint": "^8",
    "eslint-config-marine": "^3",
    "eslint-config-prettier": "^8",
    "eslint-plugin-prettier": "^3",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^4",
    "jest": "^29",
    "jest-environment-jsdom": "^29",
    "jest-html-reporters": "^2",
    "jest-junit": "^12",
    "mongoose": "^8",
    "make-dir-cli": "^3",
    "npm-run-all": "^4",
    "ts-jest": "^29"
  }
}
